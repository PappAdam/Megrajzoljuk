<Window x:Class="Rajzi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rajzi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#252323">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
         <Label Name="Debug" Content="Label" Canvas.Left="532" Canvas.Top="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="108" Background="#FFDA9696" Foreground="#FF250606" Grid.Column="1" Margin="522,10,0,0"/>
        <Canvas x:Name="MainCanvas" Grid.Column="1" >

        </Canvas>
        <StackPanel Grid.Column="0" Background="#EB9486">
            <Rectangle Name="Function" Height="30" Width="100" VerticalAlignment="Top" Margin="20" Fill="#dde" MouseLeftButtonDown="OnBlockDoubleClick"/>
            <Rectangle Name="Container" Height="30" Width="100" VerticalAlignment="Top" Margin="20" Fill="#af1" MouseLeftButtonDown="OnBlockDoubleClick"/>
            <Rectangle Name="Variable" Height="30" Width="100" VerticalAlignment="Top" Margin="20" Fill="#f1b" MouseLeftButtonDown="OnBlockDoubleClick"/>
        </StackPanel>
    </Grid>
</Window>
