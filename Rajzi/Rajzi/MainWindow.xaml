<Window x:Class="Rajzi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rajzi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#252323">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="MainCanvas" Grid.Column="1">
            <Rectangle Height="27"  Width="100" Canvas.Left="196" Canvas.Top="122" Fill="#FF13798C"/>
            <Rectangle Height="100" Canvas.Left="184" Canvas.Top="137" Width="4" Fill="#FFEB9486"/>
            <Rectangle Height="4" Canvas.Left="184" Canvas.Top="134" Width="12" Fill="#FFEB9486"/>
        </Canvas>
        <Rectangle Fill="#EB9486"></Rectangle>
    </Grid>
</Window>
