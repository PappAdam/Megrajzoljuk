<Window x:Class="Rajzi.RunWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rajzi"
        mc:Ignorable="d"
        Title="RunWindow" Height="450" Width="800">
    <Grid Background="#252323">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="grid1" Background="#252323" MouseWheel="Grid_MouseWheel" Grid.Column="1">
            <Grid x:Name="grid2">
                <Grid.RenderTransform>
                    <MatrixTransform/>
                </Grid.RenderTransform>
                <Canvas x:Name="Canvas" Grid.Column="1">
                    <Rectangle Width="20" Height="20" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Left" Fill="Green"/>
                </Canvas>
            </Grid>
        </Grid>
        <Rectangle Grid.Column="0" Fill="#EB9486"></Rectangle>
    </Grid>
</Window>