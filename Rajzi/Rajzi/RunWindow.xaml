<Window 
        x:Name="Screen"
        x:Class="Rajzi.RunWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rajzi"
        mc:Ignorable="d"
        Title="RunWindow" Height="450" Width="800">
    <Grid Background="#252323"  MouseWheel="MouseScroll">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition x:Name="CanvasPlace" Width="4*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="Canvas" Grid.Column="1" >
            <Canvas.RenderTransform>
                <ScaleTransform x:Name="ScaleTransform" CenterX="0" CenterY="0"/>
            </Canvas.RenderTransform>
            <Rectangle Height="10" Width="10" Fill="Red" Canvas.Left="224" Canvas.Top="156"></Rectangle>
        </Canvas>
        <Rectangle Fill="#EB9486"></Rectangle>
        <Label x:Name="Teszt" Content="Teszt" Canvas.Left="112" Canvas.Top="148" Foreground="#FFED3C3C"></Label>
        <Label x:Name="Teszt2" Content="Teszt2" Canvas.Left="112" Canvas.Top="148" Foreground="#FFED3C3C" Margin="0,19,0,-19"></Label>
        <Label x:Name="Teszt3" Content="Teszt3" Canvas.Left="112" Canvas.Top="148" Foreground="#FFED3C3C" Margin="0,47,0,-47"></Label>
        <Label x:Name="Teszt4" Content="Teszt4" Canvas.Left="112" Canvas.Top="148" Foreground="#FFED3C3C" Margin="0,65,0,-65"></Label>
    </Grid>
</Window>
